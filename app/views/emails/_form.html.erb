<form action="<%= action %>" id="info_mail_form">
	<div class="form-group">
		<label>Betreff:</label>
		<input name="email_subject" id="email_subject" class="form-control">
	</div>
	
	<div class="form-group">
		<label>Nachricht:</label>
		<textarea rows="10" class="form-control" name="email_body" id="email_body"></textarea>
	</div>
	<div align="right"><button type="submit" class="btn btn-primary">Absenden</button></div>
</form>