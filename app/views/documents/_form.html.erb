<%= form_for [@bibliography, @document],  :url =>  (bibliography_document_path unless @document.new_record?)   do |f| %>

  <%= render "common/validation_msg_box", resource: document %>

  <div class="row">
    <div class="col-md-6">

      <div class="form-group">
        <%= f.label "Titel" %>
      	<%= f.text_field :title, class: "form-control" %></div>
        
      <div class="form-group">
        <%= f.label "Schlagwörter" %>
        <%= f.text_field :tags, class: "form-control" %></div>

      <div class="form-group">
        <%= f.label "Kommentar" %>
        <%= f.text_area :comment, class: "form-control", rows: "7" %></div>
      
      <div class="form-group">
        <%= f.label "Datei" %>
        <%= f.file_field :attachment, class: "form-control" %></div>
 
      <%= f.submit "Speichern", class: "btn btn-primary" %>
      
    </div>
    <div class="col-md-6" align="right">
      <%= link_to "Dokument löschen", bibliography_document_path(@document.bibliography_id, @document), method: "DELETE", data: {confirm: "Löschen bestätigen"}, class: "btn btn-sm btn-danger" if can? :destroy, Document and !@document.new_record?  %>

    </div>
  </div>
<% end %>