<div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Vorname" %>
  <%= f.text_field :first_name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Nachname" %>
  <%= f.text_field :last_name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Telefon" %>
  <%= f.text_field :phone, class: "form-control" %>
</div>
<div class="form-group">
  <label class="mb-0">Wie können dich andere Mitglieder erreichen?</label>
  <small class="mt-0 form-text text-muted">Bspw. deine Email und/oder Tel. für die Anzeige in der RLCC-Mitgliederliste</small>
  <%= f.text_field :public_infos, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Sprachen" %>
  <%= f.text_field :languages, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Studiengang" %>
  <%= f.text_field :course_of_studies, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Semesteranzahl" %>
  <%= f.text_field :semester_count, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label "Interessenfelder" %>
  <%= f.text_field :hobbies, class: "form-control" %>
</div>
<div class="form-group card">
  <div class=" card-block">
  <label class="form-check-label">
    <%= f.check_box :available, class: "form-check-input" %>
    Aktuell verfügbar
  </label>
  </div>
</div>
<% if @member == current_member %>
  <div class="form-group card">
    <div class="card-block">
    
      <div id="privacy_clause" <% if @member.did_confirm_privacy_clause %> style="display: none" <% end %>>
        <%= render "privacy_disclaimer" %>
      </div>
      <% if @member.did_confirm_privacy_clause %>
        <button type="button" onclick="$('#privacy_clause').show(); $(this).hide();" class="btn btn-primary btn-sm">Datenschutzerklärung einblenden</button>
      <% end -%>
    
    <label class="form-check-label mt-4">
        <%= f.check_box :did_confirm_privacy_clause, class: "form-check-input" %>
     <b> Ich habe die Datenschutzerklärung gelesen und erkläre mein Einverständnis.</b>
    </label>
    </div>
  </div>
<% end -%>

  <div class="media my-4">
    <%= image_tag @member.avatar.url(:medium), class: "d-flex mr-3 rounded", style: "max-width: 150px;" %>

    <div class="media-body">
      <h5 class="mt-0">Profil-Bild</h5>
      <%= f.file_field :avatar, class: "form-control" %>
      <input type="checkbox" name="member[delete_avatar]" class="mt-3"> Aktuelle Datei löschen
    </div>
  </div>
  
