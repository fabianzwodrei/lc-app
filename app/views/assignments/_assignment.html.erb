<%
  done ||= false 
  admin_mode ||= false
%>
  <tr>
    <td>
      <b>
        <%= assignment.member.full_name %>
        <% if admin_mode %>
          <% if not assignment.member.annotation.blank? %>
            <button type="button" class="btn btn-link btn-sm" style="cursor: pointer;" data-toggle="modal" data-target="#theModal" data-href="/annotations/<%= assignment.member.annotation.id %>.htmlp"><span class="oi oi-magnifying-glass"></span></button>
          <% end %>
        <% end %>
      </b>

      
    </td>
    <td class="small" id="member_<%= assignment.member.id %>_qualifiaction">
      <% ql = assignment.member.qualification_level %>
      <% if ql == 3 %>
        <span href="#" data-toggle="tooltip" title="Voll qualifizierte Mitglieder können Mandate eigenständig bearbeiten und abschließend deren Abnahme anfragen."><%= QUALIFICATION_LEVELS[ql] %></span>
      <% end %>

      <% if ql == 2 %>
        <span href="#" data-toggle="tooltip" title="Voll qualifizierte Mitglieder können Mandate eigenständig bearbeiten und abschließend deren Abnahme anfragen."><%= QUALIFICATION_LEVELS[ql] %></span>
      <% end %>

      <% if ql == 1 %>
        <span href="#" data-toggle="tooltip" title="Hospitant*innen können voll qualifizierte Mitglieder bei der Mandatsbearbeitung unterstützen, können jedoch keine Änderungen am Mandatsstatus vornehmen."><%= QUALIFICATION_LEVELS[ql] %></span>
      <% end %>
      <% if ql == 0 %>
        <span href="#" class="qualification_level text-danger"><%= QUALIFICATION_LEVELS[ql] %></span>
      <% end %>
    </td>

    <td>
      <span class="assignment_approved_value">
          <%= assignment.approved ? "Zugewiesen" : "Beworben" %>
      </span>
    </td>


    <td>
      <% if admin_mode and done == false %>
         <%= render 'assignments/actions', assignment: assignment %>
      <% end %>
    </td>
  </tr>