<div class="row">
  <div class="col-md-4 offset-md-4">
    <div align="center" class="mt-3 mb-4"><img src="/lc-logo.jpeg" width="118px"></div>
    <h2 align="center"><%= LAW_CLINIC_NAME %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :passwort %>
        <%= f.password_field :password, autocomplete: "on", class: "form-control" %>
      </div>

      <div>
        <%= f.submit "Anmelden", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>

