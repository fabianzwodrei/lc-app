BEGIN:VCALENDAR
VERSION:2.0
METHOD:PUBLISH
BEGIN:VTIMEZONE
TZID:Europe/Berlin
BEGIN:DAYLIGHT
TZOFFSETFROM:+0100
TZOFFSETTO:+0200
TZNAME:CEST
DTSTART:19700329T020000
RRULE:FREQ=YEARLY;BYDAY=-1SU;BYMONTH=3
END:DAYLIGHT
BEGIN:STANDARD
TZOFFSETFROM:+0200
TZOFFSETTO:+0100
TZNAME:CET
DTSTART:19701025T030000
RRULE:FREQ=YEARLY;BYDAY=-1SU;BYMONTH=10
END:STANDARD
END:VTIMEZONE
<% for event in @events %>
BEGIN:VEVENT
LOCATION:<%= event[:place] %>
SUMMARY:<%= event[:title] %>
DESCRIPTION:<%= event[:info] ? "Arbeitstreffen. "+event[:info] : event[:type] %>
CLASS:PUBLIC
DTSTART;TZID=Europe/Berlin:<%= event[:date] %>
END:VEVENT
<% end %>
END:VCALENDAR